{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  }
}
